# Application
NODE_ENV=development

# Database Configuration
# Use 'localhost' for local development without Docker
# Use 'postgres' when running with Docker Compose (service name)
DB_HOST=postgres
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_NAME=lingora

# JWT Configuration
# Generate a secure secret using: npm run generate:jwt-secret
JWT_SECRET=change-this-in-production
JWT_EXPIRES_IN=7d

# ================================
# Docker-specific (Optional)
# ================================
# pgAdmin credentials (only used with --profile tools)
PGADMIN_EMAIL=admin@lingora.com
PGADMIN_PASSWORD=admin
